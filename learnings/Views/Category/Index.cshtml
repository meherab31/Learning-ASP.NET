@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-secondary">
                <i class="bi bi-plus-circle-dotted"></i> Create New Category
            </a>
        </div>
    </div>
    <br/> <br/>
</div>

<table class="table table-active table-striped" style="width: 100%">
    <thead>
    <tr class="table-primary">
        
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th width="20%">

        </th>   
       

    </thead>
    <tbody>
    @foreach (var obj in Model)
        {
            <tr class="table-secondary">
                
                <td width = "40%">
                    @obj.Name
                </td>
                <td width = "25%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                    <div class="w-auto btn-group" >
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success mx-2"> <i class="bi bi-pencil"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i> Delete</a>

                    </div>
                </td>


            </tr>
        }

    </tbody>

</table>

