@model Category 


<form method="post">
    <input asp-for ="Id" hidden="hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">Delete Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled="disabled" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled="disabled" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 120px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width: 150px">
            Back to List
        </a>
    </div>

</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}

